<% layout("/layouts/boilerplate") %>  
 
<style>
#filters-container {
  display: flex;
  align-items: center;
  position: relative;
}

#filters {
  display: flex;
  flex-wrap: nowrap; /* Prevent wrapping */
  overflow-x: auto;  /* Allow horizontal scrolling */
  padding: 1rem;
  white-space: nowrap; /* Keep filters in a single row */
  -ms-overflow-style: none;  /* Hide scrollbar for Internet Explorer and Edge */
  scrollbar-width: none;     /* Hide scrollbar for Firefox */
  align-items: center;
  flex: 1; /* Allow filters to take the remaining space */
}

#filters::-webkit-scrollbar {
  display: none;  /* Hide scrollbar for Chrome, Safari, and Opera */
}

.filters {
  text-align: center;
  margin-right: 1rem;
  margin-top: 0.8rem;
  opacity: 0.7;
  flex: 0 0 auto;  /* Prevent filters from stretching */
}

.filters:hover {
  opacity: 1;
  cursor: pointer;
}

.filters p {
  font-size: 0.6rem;
}

.tax-info {
  display: none;
}

.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: 2.5rem;
  padding: 1rem;
  display: flex;
  align-items: center;
  position: sticky; /* Sticky position */
  right: 0;
  z-index: 10; /* Ensure it stays on top */
  background-color: white; /* Add background to prevent overlap */
}

/* Media query for small screens */
@media (max-width: 768px) {
  #filters {
    overflow-x: scroll; /* Enable horizontal scrolling */
  }
  
  .filters {
    margin-right: 0.5rem; /* Adjust spacing for smaller screens */
  }
}
</style>

      <div id="filters">
